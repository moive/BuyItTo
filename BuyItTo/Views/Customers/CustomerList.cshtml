@model BuyItTo.ViewModels.CustomerListViewModel
@{
    ViewBag.Title = "CustomerList";
}

<h2>Customer List</h2>

@Html.ActionLink("Create new Customer","Create", null, new { @class="btn btn-primary btn-sm my-3" })

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.name</td>
                <td>@customer.lastName</td>
                <td>@customer.phone</td>
                <td>@customer.email</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = customer.ID}, new { @class= "btn btn-warning btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = customer.ID}, new { @class= "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
